{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "functions": {
        "api/index.js": {
            "maxDuration": 60,
            "memory": 1024
        }
    },
    "env": {
        "DB_CONNECTION_LIMIT": "1"
    }
}